    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Store Backend",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/build/ela.store",
            "program": "${workspaceFolder}/backend",
            "buildFlags": "-tags=IDE"
        },
        {
            "name": "Launch Store Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/build/server/debug",
            "program": "${workspaceFolder}/server",
            "buildFlags": "-tags=IDE"
        },
        {
            "name": "Launch Client Store",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/build/ela.client.store",
            "program": "${workspaceFolder}/client-store/backend",
            "buildFlags": "-tags=IDE"
        }        
    ]
}